@model LibraryFullstackSystem1.Models.Branch.BranchIndexModel

@{
    ViewData["Title"] = "Library Branch";
}

<div class="body-content">
    <div class="">
        <h2>Branches</h2>
    </div>
    <div class="container">
        <div class="row">
            @foreach (var branch in Model.Branches)
            {
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="@branch.Name" class="">
                    <div class="caption">
                        <h3>@branch.Name</h3>
                        <p>@branch.Address</p>
                        <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>

