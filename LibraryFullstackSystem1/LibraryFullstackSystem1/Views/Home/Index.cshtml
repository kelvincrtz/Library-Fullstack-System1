@{
    ViewData["Title"] = "Home Page";
}

<div class="body-content">
    <h2>Welcome to the Library</h2>
    <div class="jumbotron">
        <div class="row">
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="~/images/home/assets.png" class="">
                    <div class="caption">
                        <h3>Library Assets</h3>
                        <p>A list of all the available books and videos in the library</p>
                        <p><a asp-controller="Catalog" asp-action="Index" class="btn btn-primary" role="button">More</a></p>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="~/images/home/branches.png" class="">
                    <div class="caption">
                        <h3>Library Branches</h3>
                        <p>All operational libraries in the country</p>
                        <p><a asp-controller="Branch" asp-action="Index" class="btn btn-primary" role="button">More</a></p>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="~/images/home/patrons.png" class="">
                    <div class="caption">
                        <h3>Patrons</h3>
                        <p>View all the patrons in all regions of the Library Sect.</p>
                        <p><a asp-controller="Patron" asp-action="Index" class="btn btn-primary" role="button">More</a></p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>