@{
    ViewData["Title"] = "Home Page";
}

<div class="body-content">
    <h1>Welcome to the Library</h1>
    <div class="jumbotron">
        <div class="row">
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="~/images/home/assets.png" class="">
                    <div class="caption">
                        <h3 class="">Library Assets</h3>
                        <p class="">
                            <small class="text-muted">A list of all the available books and videos in the library system</small>
                        </p>
                        <p><a asp-controller="Catalog" asp-action="Index" class="btn btn-primary" role="button">Go to Assets</a></p>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="~/images/home/branches.png" class="">
                    <div class="caption">
                        <h3>Library Branches</h3>
                        <p>
                            <small class="text-muted">All operational libraries that are currently available in the country</small>
                        </p>
                        <p><a asp-controller="Branch" asp-action="Index" class="btn btn-primary" role="button">Go to Branches</a></p>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="~/images/home/patrons.png" class="">
                    <div class="caption">
                        <h3>Patrons</h3>
                        <p>
                            <small class="text-muted">View all available patrons in all regions of the Library Sect.</small>
                        </p>
                        <p><a asp-controller="Patron" asp-action="Index" class="btn btn-primary" role="button">Go to Patrons</a></p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>